<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t(:company_name) %></th>
      <th><%= t(:first_name) %></th>
      <th><%= t(:second_name) %></th>
      <th><%= t(:middle_name) %></th>
      <th><%= t(:position) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.company_name %></td>
        <td><%= organization.first_name %></td>
        <td><%= organization.second_name %></td>
        <td><%= organization.middle_name %></td>
        <td><%= organization.position %></td>
        <td><%= link_to t(:show), organization %></td>
        <td><%= link_to t(:edit), edit_organization_path(organization) %></td>
        <td><%= link_to t(:destroy), organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organization', new_organization_path %>
