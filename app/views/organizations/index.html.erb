<h1><%= t(:organizations) %></h1>
<%= render partial: "shared/searchbar", locals: {path: new_organization_path, text: t(:new_organization), search_hash: :name_or_position_cont } %>
<br>
<table class="table">
  <thead>
    <tr>
      <th><%= t(:name) %></th>
      <th><%= t(:organization_and_person) %></th>
      <th><%= t(:position) %></th>
      <% if current_user.is_admin == true %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |o| %>
      <tr>
        <td><%= link_to o.name, organization_path(o) %></td>
        <td><%= link_to o.person.full_name, person_path(o.person_id) %></td>
        <td><%= link_to o.position, organization_path(o) %></td>
        <% if current_user.is_admin == true %>
          <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_organization_path(o) %></td>
          <td><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, o, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>