<!DOCTYPE html>
<html>
    <head>
        <title><%= t(:title) %></title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <%= link_to t(:checking_system), root_path, class: "navbar-brand" %>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active">
                        <%= link_to t(:inspectors), inspectors_path %>
                    </li>
                    <li>
                        <%= link_to t(:people), people_path %>
                    </li>
                    <li>
                        <%= link_to t(:organization), organizations_path %>
                    </li>
                    <li>
                        <%= link_to t(:checks), checks_path %>
                    </li>
                    <li>
                        <%= link_to t(:reports), reports_path %>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            <%= yield %>
        </div>
    </body>
</html>
