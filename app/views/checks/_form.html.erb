<%= simple_form_for @check do |f| %>
<%= f.error_notification %>
<%= f.input :title_check, placeholder: t(:title_check), label: t(:title_check) %>
<%= f.input :amount, placeholder: t(:amount), label: t(:amount), input_html: { min: 1, value: 1 } %>
<%= f.input :checks_number, placeholder: t(:checks_number), label: t(:checks_number) %>
<%= f.input :check_start, label: t(:check_start) %>
<%= f.input :check_finish, label: t(:check_finish) %>
<%= f.input :check_remark_destroy, label: t(:check_remark_destroy) %>
<%= f.association :inspector, label: t(:executive), label_method: :full_name %>
<%= f.input :executive, placeholder: t(:inspectors), label: t(:inspectors) %>
<%= f.association :organizations, as: :select, label_method: :name, label: t(:checks_organizations) %>
<%= f.association :people, as: :select, label_method: :last_name, label: t(:checks_people_organizations) %>
<%= f.association :response_measures, as: :radio_buttons, label_method: :name, label: t(:response_measures) %>
<%= f.association :reasons, as: :radio_buttons, label_method: :name, label: t(:reasons) %>
<%= f.association :violations, as: :radio_buttons, label_method: :name, label: t(:violations) %>
<%= f.association :categories, as: :radio_buttons, label_method: :name, label: t(:categories) %>
<%= f.association :direction_statuses, as: :radio_buttons, label_method: :name, label: t(:direction_statuses) %>
<%= f.input :direction_author, label: t(:direction_author) %>
<%= f.input :direction_where, label: t(:direction_where) %>
<%= f.input :case_number, placeholder: t(:case_number), label: t(:case_number) %>
<%= f.input :number_of_volumes, placeholder: t(:number_of_volumes), label: t(:number_of_volumes) %>
<%= f.input :for_office, label: t(:for_office) %>
<%= f.input :control, label: t(:control) %>
<%= f.button :submit , t(:save), class: "btn btn-outline-inverse" %>
<% end %>
<br>