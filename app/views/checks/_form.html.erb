<%= simple_form_for @check, url: checks_path, as: 'check' do |f| %>
<%= f.error_notification %>
<%= f.input :amount, placeholder: t(:amount), label: t(:amount) %>
<%= f.input :checks_number, placeholder: t(:checks_number), label: t(:checks_number) %>
<%= f.input :deadline, label: t(:deadline) %>
<%= f.input :inspector_id, label: t(:inspector), collection: @inspectors %>
<%= f.input :reason, as: :check_boxes, collection: @reason, include_blank: false, include_hidden: false %>
<%= f.input :response_measure, as: :check_boxes, collection: @response_measure, include_blank: false, include_hidden: false  %>
<%= f.input :violation, as: :check_boxes, collection: @violation, include_blank: false, include_hidden: false  %>
<%= f.input :category, as: :check_boxes, collection: @category, include_blank: false, include_hidden: false %>
<%= f.input :direction, as: :check_boxes, collection: @direction, include_blank: false, include_hidden: false %>
<%= f.input :term, placeholder: t(:term) %>
<%= f.input :case_number, placeholder: t(:case_number) %>
<%= f.input :number_of_volumes, placeholder: t(:number_of_volumes) %>
<%= f.input :executive, placeholder: t(:executive) %>
<%= f.input :for_office %>
<%= f.input :controll %>
<%= f.button :submit %>
<% end %>
