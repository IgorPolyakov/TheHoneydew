<p id="notice"><%= notice %></p>
<h1><%= t(:checks) %></h1>
<% if current_user.is_admin == true %>
<%= link_to t(:new_check), new_check_path, class: 'btn btn-success' %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th><%= t(:case_number)%></th>
      <th><%= t(:check_start)%></th>
      <th><%= t(:check_finish)%></th>
      <th><%= t(:check_remark_destroy)%></th>
      <th><%= t(:reason)%></th>
      <th><%= t(:violation)%></th>
      <th><%= t(:response_measure)%></th>
      <th><%= t(:inspector)%></th>
      <th><%= t(:executive)%></th>
      <% if current_user.is_admin == true %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @checks.each do |check| %>
    <tr role="button"  onclick="window.location.href = '/checks/<%= check.id %>'">
      <td> <%= check.case_number %></td>
      <td> <%= check.checks_number %></td>
      <td> <%= check.check_start %></td>
      <td> <%= check.check_finish %></td>
      <td> <%= check.check_remark_destroy %></td>
      <td> <%= check.reason %></td>
      <td> <%= check.violation %></td>
      <td> <%= check.response_measure %></td>
      <td> <%= Inspector.find_by(id: check.inspector_id).last_name %></td>
      <td> <%= check.executive %></td>
      <% if current_user.is_admin == true %>
        <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_check_path(check) %></td>
        <td><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, check, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
