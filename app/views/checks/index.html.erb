<p id="notice"><%= notice %></p>
<h1><%= t(:checks) %></h1>

<table class="table table-hover">
  <thead>
    <tr class ="first_tr">

      <th>#</th>
      <th><%= t(:case_number)%></th>
      <th><%= t(:check_start)%></th>
      <th><%= t(:check_finish)%></th>
      <th><%= t(:check_remark_destroy)%></th>
      <th><%= t(:reason)%></th>
      <th><%= t(:violation)%></th>
      <th><%= t(:response_measure)%></th>
      <th><%= t(:inspector)%></th>
      <th><%= t(:executive)%></th>
      <% if current_user.is_admin == true %>
        <th colspan="3"></th>
        <% else %>
        <th colspan="1"></th>
      <% end %>

    </tr>
  </thead>
  <tbody>
    <% @checks.each do |check| %>
    <tr class="green">
      <td> <%= check.case_number %></td>
      <td> <%= check.checks_number %></td>
      <td> <%= check.check_start %></td>
      <td> <%= check.check_finish %></td>
      <td> <%= check.check_remark_destroy %></td>
      <td> <%= check.reason %></td>
      <td> <%= check.violation %></td>
      <td> <%= check.response_measure %></td>
      <td> <%= Inspector.find_by(id: check.inspector_id).last_name %></td>
      <td> <%= check.executive %></td>
      <td><%= link_to t(:show), check %></td>
      <% if current_user.is_admin == true %>
        <td><%= link_to t(:edit), edit_check_path(check) %></td>
        <td><%= link_to t(:destroy), check, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.is_admin == true %>
<%= link_to t(:new_check), new_check_path %>
<% end %>

<br>
