<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-inverse">
        <div class="panel-heading center">
          <h2><%= t(:sign_in) %></h2>
        </div>

        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label t(:login) %><br/>
            <%= f.text_field :login, autofocus: true, placeholder: 'Имя пользователя', class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label t(:password) %><br/>
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Пароль', class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label t(:remember_me) %>
            </div>
          <% end  %>

          <div class="actions center">
            <%= f.submit t(:sign_in), class: "btn btn-outline-inverse" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>