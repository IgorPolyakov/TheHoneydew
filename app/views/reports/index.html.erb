<p id="notice"><%= notice %></p>

<h1><%= t(:reports) %></h1>

<table class="table">
    <thead>
        <tr>
            <th><%= t(:number) %></th>
            <th><%= t(:deadline) %></th>
            <th><%= t(:inspector) %></th>
            <th><%= t(:reason) %></th>
            <th><%= t(:result) %></th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @reports.each do |report| %>
        <tr>
            <td><%= report.number %></td>
            <td><%= report.deadline %></td>
            <td><%= report.inspector %></td>
            <td><%= report.reason %></td>
            <td><%= report.result %></td>
            <td><%= Inspector.find(report.inspector_id).last_name; %></td>
            <td><%= link_to t(:show), report %></td>
            <td><%= link_to t(:edit), edit_report_path(report) %></td>
            <td><%= link_to t(:destroy), report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
