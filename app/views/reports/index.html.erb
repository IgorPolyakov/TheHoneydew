<p id="notice"><%= notice %></p>

<h1><%= t(:reports) %></h1>
<% if current_user.is_admin == true %>
  <%= link_to t(:new_report), new_report_path, class: 'btn btn-success' %>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th><%= t(:case_number) %></th>
      <th><%= t(:title_report) %></th>
      <th><%= t(:deadline) %></th>
      <th><%= t(:inspector) %></th>
      <th><%= t(:organization) %></th>
      <th><%= t(:executive) %></th>
      <th><%= t(:reason) %></th>
      <th><%= t(:result) %></th>
      <% if current_user.is_admin == true %>
        <th colspan="3"></th>
        <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    <tr>
      <td><%= report.number %></td>
      <td><%= report.title_report %></td>
      <td><%= report.deadline %></td>
      <td><%= Inspector.find(report.inspector_id).last_name; %></td>
      <td><%= Organization.find(report.organization_id).company_name; %></td>
      <td><%= report.executive %></td>
      <td><%= report.reason %></td>
      <td><%= report.result %></td>
      <td><%= link_to t(:show), report %></td>
      <% if current_user.is_admin == true %>
        <td><%= link_to t(:edit), edit_report_path(report) %></td>
        <td><%= link_to t(:destroy), report, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
