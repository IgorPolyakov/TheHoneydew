<%= simple_form_for @report do |f| %>
<%= f.error_notification %>
<%= f.input :title_report, placeholder: t(:title_report), label: t(:title_report) %>
<%= f.input :number, placeholder: t(:number), label: t(:number) %>
<%= f.input :deadline, label: t(:deadline) %>
<%= f.input :reason, as: :check_boxes, collection: @reason, label: t(:reason), include_blank: false, include_hidden: false %>
<%= f.input :result, as: :check_boxes, collection: @result, label: t(:result), include_blank: false, include_hidden: false %>
<%= f.association :inspector, label: t(:inspector), :label_method  => lambda { |s| "#{s.last_name} #{s.first_name} - #{s.position}" } %>
<%= f.association :organization, label: t(:organization), label_method:  :company_name  %>
<%= f.input :executive, label: t(:executive), placeholder: t(:executive) %>
<%= f.button :submit, t(:save), class: "btn btn-inverse" %>
<% end %>
<br>
