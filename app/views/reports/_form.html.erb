<%= form_for(report) do |f| %>
<% if report.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(report.errors.count, "error") %>
        prohibited this report from being saved:</h2>

    <ul>
        <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :number %>
    <%= f.number_field :number %>
</div>

<div class="field">
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline %>
</div>
<div class="field">
    <%= f.label :reason %>
    <%= f.text_field :reason %>
</div>
<div class="field">
    <%= f.label :result %>
    <%= f.text_field :result %>
</div>

<div class="field">
    <%= f.label :inspector_id %>
    <%= f.select :inspector_id , options_for_select(@inspectors) %>
</div>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
