<p id="notice"><%= notice %></p>

<h1>Inspectors</h1>

<table class="table">
    <thead>
        <tr>
            <th>First name</th>
            <th>Lastname</th>
            <th>Position</th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
        <% @inspectors.each do |inspector| %>
        <tr>
            <td><%= inspector.first_name %></td>
            <td><%= inspector.last_name %></td>
            <td><%= inspector.position %></td>
            <td><%= link_to 'Show', inspector %></td>
            <td><%= link_to 'Edit', edit_inspector_path(inspector) %></td>
            <td><%= link_to 'Destroy', inspector, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

