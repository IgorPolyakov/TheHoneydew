<p id="notice"><%= notice %></p>

<h1><%= t(:inspectors) %></h1>
<% if current_user.is_admin == true %>
    <%= link_to t(:new_inspector), new_inspector_path, class: 'btn btn-success' %>
<% end %>

<table class="table table-hover">
    <thead>
        <tr>
            <th><%= t(:first_name)%></th>
            <th><%= t(:last_name)%></th>
            <th><%= t(:middle_name)%></th>
            <th><%= t(:position)%></th>
            <% if current_user.is_admin == true %>
              <th colspan="3"></th>
              <% else %>
              <th colspan="1"></th>
            <% end %>
        </tr>
    </thead>

    <tbody>
        <% @inspectors.each do |inspector| %>
        <tr>
            <td><%= inspector.first_name %></td>
            <td><%= inspector.last_name %></td>
            <td><%= inspector.middle_name %></td>
            <td><%= inspector.position %></td>
            <td><%= link_to t(:show), inspector %></td>
            <% if current_user.is_admin == true %>
                <td><%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, , edit_inspector_path(inspector) %></td>
                <td><%= link_to '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, inspector, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>

<br>
